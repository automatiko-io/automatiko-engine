{
  "id": "switchworkflow",
  "name": "switch-wf",
  "specVersion": "0.8",
  "version": "1.0",
  "start":"AddInfo",
  "states":[
    {
      "name":"AddInfo",
      "type":"inject",
      "data": {
        "person": {
          "name": "john",
          "age": 25
        }
      },
      "transition": "Sleep for a while"      
    },
    {
      "name":"Sleep for a while",
      "type":"sleep",
      "duration": "PT20M",
      "transition": "ChooseOnAge"
    },
    {
      "name": "ChooseOnAge",
      "type": "switch",
      "dataConditions": [
        {
          "condition": "${ .person | .age >= 18 }",
          "transition": "Approve"
        },
        {
          "condition": "${ .person | .age < 18 }",
          "transition": "Deny"          
        }
      ],
      "defaultCondition": {
        "transition": "Approve"        
      }
    },
    {
      "name":"Approve",
      "type":"inject",
      "data": {
        "decision": "Approved"
      },
      "end": true
    },
    {
      "name":"Deny",
      "type":"inject",
      "data": {
        "decision": "Denied"
      },
      "end": true
    }
  ]
}