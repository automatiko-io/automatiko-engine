<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.automatiko.addons</groupId>
    <artifactId>persistence</artifactId>
    <version>0.13.0</version>
  </parent>
  <artifactId>automatiko-cassandra-persistence-addon</artifactId>

  <name>Automatiko Engine :: Add-Ons :: Persistence :: Apache Cassandra</name>
  <description>Apache Cassandra based persistence for Automatiko Engine</description>

  <properties>
    <java.module.name>io.automatiko.addons.persistence.cassandra</java.module.name>
  </properties>

  <dependencies>
    <dependency>
      <groupId>io.automatiko.engine</groupId>
      <artifactId>automatiko-engine-api</artifactId>
    </dependency>
    <dependency>
      <groupId>io.automatiko.engine</groupId>
      <artifactId>automatiko-engine-common</artifactId>
    </dependency>
    <dependency>
      <groupId>io.automatiko.workflow</groupId>
      <artifactId>automatiko-workflow-core</artifactId>
    </dependency>
    <dependency>
      <groupId>io.automatiko.addons</groupId>
      <artifactId>automatiko-common-persistence</artifactId>
    </dependency>

    <!-- cassandra dependencies -->
    <dependency>
      <groupId>com.datastax.oss.quarkus</groupId>
      <artifactId>cassandra-quarkus-client</artifactId>
      <version>${version.com.datastax.oss.quarkus}</version>
    </dependency>
    <dependency>
      <groupId>com.datastax.oss</groupId>
      <artifactId>java-driver-query-builder</artifactId>
      <version>${version.com.datastax.oss}</version>
    </dependency>

    <!-- test dependencies -->
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-engine</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.assertj</groupId>
      <artifactId>assertj-core</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.jboss.jandex</groupId>
        <artifactId>jandex-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>make-index</id>
            <goals>
              <goal>jandex</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>