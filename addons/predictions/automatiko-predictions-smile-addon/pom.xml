<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.automatiko.addons</groupId>
    <artifactId>predictions</artifactId>
    <version>0.13.0</version>
  </parent>

  <groupId>io.automatiko.addons</groupId>
  <artifactId>automatiko-predictions-smile-addon</artifactId>
  <name>Automatiko Engine :: Add-Ons :: Predictions :: SMILE</name>
  <description>Prediction based on SMILE addon for Automatiko Engine</description>
  
  <properties>
    <java.module.name>io.automatiko.addons.predictions.smile</java.module.name>
  </properties>

  <dependencies>
    <dependency>
      <groupId>io.automatiko.addons</groupId>
      <artifactId>automatiko-predictions-api</artifactId>
    </dependency>
    <dependency>
      <groupId>com.github.haifengl</groupId>
      <artifactId>smile-core</artifactId>
    </dependency>

    <!-- test dependencies -->
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-engine</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.assertj</groupId>
      <artifactId>assertj-core</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>io.automatiko.workflow</groupId>
      <artifactId>automatiko-workflow-compiler</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>io.automatiko.workflow</groupId>
      <artifactId>automatiko-workflow-bpmn2</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mvel</groupId>
      <artifactId>mvel2</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
