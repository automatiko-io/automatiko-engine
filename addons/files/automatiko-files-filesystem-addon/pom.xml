<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.automatiko</groupId>
    <artifactId>files</artifactId>
    <version>0.34.0</version>
  </parent>
  <groupId>io.automatiko.addons</groupId>
  <artifactId>automatiko-files-filesystem-addon</artifactId>
  <name>Automatiko Engine :: Add-Ons :: Files :: File System</name>
  <description>Files based on File System AddOn for Automatiko Engine</description>

  <properties>
    <java.module.name>io.automatiko.addons.files.filesystem</java.module.name>
  </properties>

  <dependencies>
    <dependency>
      <groupId>io.automatiko.engine</groupId>
      <artifactId>automatiko-engine-api</artifactId>
    </dependency>
    <dependency>
      <groupId>io.automatiko.workflow</groupId>
      <artifactId>automatiko-workflow-core</artifactId>
    </dependency>
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-rest</artifactId>
    </dependency>
    <dependency>
      <groupId>org.eclipse.microprofile.openapi</groupId>
      <artifactId>microprofile-openapi-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-annotations</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>io.smallrye</groupId>
        <artifactId>jandex-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>make-index</id>
            <goals>
              <goal>jandex</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>  
</project>