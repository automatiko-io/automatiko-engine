<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.automatiko.quarkus</groupId>
    <artifactId>automatiko-quarkus-parent</artifactId>
    <version>0.45.0</version>
  </parent>
  <artifactId>automatiko-function-flow-deployment</artifactId>

  <name>Automatiko Engine :: Quarkus Extension :: Function Flow Deployment</name>
  <description>Function Flow Deployment module for Quarkus Extension for Automatiko Engine</description>
  
  <properties>
    <java.module.name>io.automatiko.quarkus.function.flow.deployment</java.module.name>
  </properties>

  <dependencies>

    <dependency>
      <groupId>io.automatiko.quarkus</groupId>
      <artifactId>automatiko-common-deployment</artifactId>
    </dependency>
    <dependency>
      <groupId>io.automatiko.quarkus</groupId>
      <artifactId>automatiko-function-flow</artifactId>
    </dependency>
    <!-- required for automatiko as function flow -->
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-funqy-server-common-deployment</artifactId>
    </dependency>    
    <dependency>
      <groupId>io.quarkus</groupId>
      <artifactId>quarkus-funqy-knative-events-deployment</artifactId>
    </dependency>
    
    <dependency>
      <groupId>io.smallrye</groupId>
      <artifactId>smallrye-open-api-core</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <annotationProcessorPaths>
            <path>
              <groupId>io.quarkus</groupId>
              <artifactId>quarkus-extension-processor</artifactId>
              <version>${version.io.quarkus}</version>
            </path>
          </annotationProcessorPaths>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>